@model IEnumerable<ClaimsSystem.Models.LecturerClaim>
@{
    ViewData["Title"] = "Pending Claims";
}
<h2>Pending Claims</h2>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr><th>Id</th><th>Lecturer</th><th>Hours</th><th>Rate</th><th>Amount</th><th>Submitted</th><th>Doc</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.LecturerName</td>
                <td>@c.HoursWorked</td>
                <td>@c.HourlyRate</td>
                <td>@c.Amount.ToString("C")</td>
                <td>@c.DateSubmitted.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @if (!string.IsNullOrEmpty(c.SupportingDocumentPath))
                    {
                        <a href="@c.SupportingDocumentPath" target="_blank">View</a>
                    }
                    else
                    {

                        <span>No file</span>
                    }
                </td>
                <td>
                    <form method="post" asp-action="Approve" asp-route-id="@c.Id" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form method="post" asp-action="Reject" asp-route-id="@c.Id" style="display:inline; margin-left:6px">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
